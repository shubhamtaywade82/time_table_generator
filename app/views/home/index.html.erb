<h1>Department</h1>
<table class="table table-hover table-responsive-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Alias</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.alias %></td>
        <td><%= link_to '', edit_branch_path(branch), class:"fa fa-pencil-square-o fa-lg" %></td>
        <td><%= link_to '', branch, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-trash fa-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
