<%= form_with(model: faculty, local: true) do |form| %>
  <% if faculty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(faculty.errors.count, "error") %> prohibited this faculty from being saved:</h2>
      <ul>
        <% faculty.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control shadow rounded" %>
  </div>
  <div class="form-group">
    <%= form.label :alias %>
    <%= form.text_field :alias, class:"form-control shadow rounded" %>
  </div>
  <div class="form-group">
    <%= form.label :branch_id, class: ""  %>
    <%= form.select(:branch_id) do %>
      <% @branch.each do |b| -%>
        <%= content_tag(:option, b.name, value: b.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :subject_id, class: ""  %>
    <%= form.select(:subject_id) do %>
      <% @subject.each do |sub| -%>
        <%= content_tag(:option, sub.name, value: sub.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
