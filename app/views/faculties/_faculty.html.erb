<table class="table table-hover table-responsive-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Alias</th>
      <th scope="col">Branch</th>
      <th scope="col">Subject</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.name %></td>
        <td><%= faculty.alias %></td>
        <td><%= faculty.branch.alias %></td>
        <td><%= faculty.subject.alias %></td>
        <td><%= link_to '', edit_faculty_path(faculty),class:"fa fa-pencil-square-o fa-lg" %></td>
        <td><%= link_to '', faculty, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-trash fa-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>